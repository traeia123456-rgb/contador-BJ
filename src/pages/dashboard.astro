  // --- Descarga a Excel usando plantilla XLSM SIN SheetJS (JSZip + OOXML) ---
  async function downloadSnapshotExcel(id: string){
    try {
      const { data, error } = await supabase.from('bj_snapshots').select('data, created_at').eq('id', id).single();
      if (error) { console.error(error); alert('Error cargando snapshot'); return; }
      const snap = (data as any)?.data || {};
      // L√≠mites de seguridad
      const MAX_ROWS = 500; // m√°ximo de filas a escribir
      const MAX_STR_LEN = 256; // longitud m√°xima de cadenas
      const sanitizeText = (val: string) => (String(val ?? '').trim()).slice(0, MAX_STR_LEN);

      // Cargar plantilla XLSM desde /Plantilla_BJ_FINAL.xlsm (debe estar en public)
      const resp = await fetch('/Plantilla_BJ_FINAL.xlsm');
      if (!resp.ok) {
        alert('No se encontr√≥ la plantilla en /Plantilla_BJ_FINAL.xlsm. Coloca el archivo en la carpeta public.');
        return;
      }
      const buf = await resp.arrayBuffer();

      // Cargar JSZip y manipular OOXML
      const JSZipMod: any = await import('jszip');
      const JSZip = JSZipMod.default ?? JSZipMod;
      const zip = await JSZip.loadAsync(buf);

      const parseXML = (t: string) => new DOMParser().parseFromString(t, 'application/xml');
      const serializeXML = (doc: Document) => new XMLSerializer().serializeToString(doc);
      const colToNum = (col: string) => col.split('').reduce((n, ch) => n * 26 + (ch.charCodeAt(0) - 64), 0);
      const numToCol = (n: number) => { let s = ''; while (n > 0) { const m = (n - 1) % 26; s = String.fromCharCode(65 + m) + s; n = Math.floor((n - 1) / 26); } return s; };
      const ref = (c: number, r: number) => `${numToCol(c)}${r}`;

      // Localizar hoja 'ORIGINAL' o primera
      const workbookXml = await zip.file('xl/workbook.xml')!.async('text');
      const relsXml = await zip.file('xl/_rels/workbook.xml.rels')!.async('text');
      const wbDoc = parseXML(workbookXml);
      const relsDoc = parseXML(relsXml);
      const sheets = Array.from(wbDoc.getElementsByTagName('sheet'));
      let targetRelId = sheets.find(s => (s.getAttribute('name')||'').toUpperCase() === 'ORIGINAL')?.getAttribute('r:id');
      if (!targetRelId && sheets.length) targetRelId = sheets[0].getAttribute('r:id') || '';
      if (!targetRelId) { alert('No se encontr√≥ ninguna hoja en el libro.'); return; }
      const rel = Array.from(relsDoc.getElementsByTagName('Relationship')).find(r => r.getAttribute('Id') === targetRelId);
      if (!rel) { alert('No se pudo resolver la hoja en workbook.xml.rels'); return; }
      const sheetPath = `xl/${rel.getAttribute('Target')}`;
      const sheetXml = await zip.file(sheetPath)!.async('text');
      const sheetDoc = parseXML(sheetXml);

      // Resolver sharedStrings para b√∫squeda de encabezados
      let sst: string[] = [];
      if (zip.file('xl/sharedStrings.xml')){
        const sstXml = await zip.file('xl/sharedStrings.xml')!.async('text');
        const sstDoc = parseXML(sstXml);
        sst = Array.from(sstDoc.getElementsByTagName('si')).map(si => {
          const tNodes = si.getElementsByTagName('t');
          if (tNodes.length) return tNodes[0].textContent || '';
          const rNodes = si.getElementsByTagName('r');
          return Array.from(rNodes).map(rn => rn.getElementsByTagName('t')[0]?.textContent || '').join('');
        });
      }
      const getCellText = (cEl: Element) => {
        const t = cEl.getAttribute('t');
        if (t === 's') { const idx = Number(cEl.getElementsByTagName('v')[0]?.textContent || ''); return sst[idx] ?? ''; }
        if (t === 'inlineStr') { return cEl.getElementsByTagName('t')[0]?.textContent || ''; }
        const v = cEl.getElementsByTagName('v')[0]?.textContent || '';
        return v;
      };

      // Buscar encabezados MANOS / RESULTADO JUGADOR / DILER
      const sheetData = sheetDoc.getElementsByTagName('sheetData')[0];
      const rows = Array.from(sheetData.getElementsByTagName('row'));
      const headers = { MANOS: null as any, RES: null as any, DIL: null as any };
      for (const row of rows){
        const rnum = Number(row.getAttribute('r')||'0');
        const cells = Array.from(row.getElementsByTagName('c'));
        for (const c of cells){
          const refAttr = c.getAttribute('r')||'';
          const m = refAttr.match(/([A-Z]+)(\d+)/); if (!m) continue;
          const cnum = colToNum(m[1]);
          const text = (getCellText(c)||'').toUpperCase().trim();
          if (text === 'MANOS') headers.MANOS = { r: rnum, c: cnum };
          else if (text === 'RESULTADO JUGADOR') headers.RES = { r: rnum, c: cnum };
          else if (text === 'DILER') headers.DIL = { r: rnum, c: cnum };
        }
      }

      let startRow = 28; let colManos = colToNum('B'); let colRes = colToNum('C'); let colDil = colToNum('D');
      if (headers.MANOS && headers.RES && headers.DIL && headers.MANOS.r === headers.RES.r && headers.RES.r === headers.DIL.r){
        startRow = headers.MANOS.r + 1;
        colManos = headers.MANOS.c; colRes = headers.RES.c; colDil = headers.DIL.c;
      }

      const handsRaw: Array<{resultado?: string, diler?: string}> = (snap?.pages || []).flat().filter((r: any) => {
        const res = (r?.resultado || '').trim(); const dil = (r?.diler || '').trim();
        return res !== '' || dil !== '';
      });
      const hands = handsRaw.slice(0, MAX_ROWS);

      // Crear / asegurar filas y escribir datos
      const ensureRow = (n: number) => {
        let row = rows.find(r => Number(r.getAttribute('r')) === n);
        if (!row){
          row = sheetDoc.createElement('row');
          row.setAttribute('r', String(n));
          // insertar manteniendo orden ascendente por r
          const next = rows.find(r => Number(r.getAttribute('r')) > n);
          if (next && next.parentNode){ next.parentNode.insertBefore(row, next); }
          else { sheetData.appendChild(row); }
          rows.push(row);
          rows.sort((a,b) => Number(a.getAttribute('r')) - Number(b.getAttribute('r')));
        }
        // asegurar spans para las columnas usadas
        const minC = Math.min(colManos, colRes, colDil);
        const maxC = Math.max(colManos, colRes, colDil);
        row.setAttribute('spans', `${minC}:${maxC}`);
        return row;
      };
      const removeCell = (rowEl: Element, cnum: number) => {
        const cref = ref(cnum, Number(rowEl.getAttribute('r')));
        const cell = Array.from(rowEl.getElementsByTagName('c')).find(c => c.getAttribute('r') === cref);
        if (cell) rowEl.removeChild(cell);
      };
      const insertCellSorted = (rowEl: Element, cEl: Element) => {
        const cRef = cEl.getAttribute('r') || '';
        const m = cRef.match(/([A-Z]+)(\d+)/);
        const newC = m ? colToNum(m[1]) : 1;
        const cells = Array.from(rowEl.getElementsByTagName('c'));
        const next = cells.find(c => {
          const r = c.getAttribute('r')||''; const mm = r.match(/([A-Z]+)(\d+)/);
          const cnum = mm ? colToNum(mm[1]) : 1;
          return cnum > newC;
        });
        if (next) rowEl.insertBefore(cEl, next); else rowEl.appendChild(cEl);
      };
      const setNum = (rowEl: Element, cnum: number, val: number) => {
        const cref = ref(cnum, Number(rowEl.getAttribute('r')));
        // si ya existe, reutilizar
        const existing = Array.from(rowEl.getElementsByTagName('c')).find(c => c.getAttribute('r') === cref);
        let cEl = existing ?? sheetDoc.createElement('c');
        cEl.setAttribute('r', cref);
        cEl.removeAttribute('t');
        // limpiar hijos
        Array.from(cEl.childNodes).forEach(n => cEl.removeChild(n));
        const vEl = sheetDoc.createElement('v'); vEl.textContent = String(val);
        cEl.appendChild(vEl);
        if (!existing) insertCellSorted(rowEl, cEl);
      };
      const setStr = (rowEl: Element, cnum: number, val: string) => {
        const cref = ref(cnum, Number(rowEl.getAttribute('r')));
        const existing = Array.from(rowEl.getElementsByTagName('c')).find(c => c.getAttribute('r') === cref);
        let cEl = existing ?? sheetDoc.createElement('c');
        cEl.setAttribute('r', cref);
        cEl.setAttribute('t', 'inlineStr');
        // limpiar hijos
        Array.from(cEl.childNodes).forEach(n => cEl.removeChild(n));
        const isEl = sheetDoc.createElement('is'); const tEl = sheetDoc.createElement('t'); tEl.textContent = val;
        isEl.appendChild(tEl); cEl.appendChild(isEl);
        if (!existing) insertCellSorted(rowEl, cEl);
      };

      // Limpiar 200 filas destino y escribir manos
      for (let i=0;i<200;i++){ const r = ensureRow(startRow + i); removeCell(r, colManos); removeCell(r, colRes); removeCell(r, colDil); }
      hands.forEach((h, idx) => { const r = ensureRow(startRow + idx); setNum(r, colManos, idx + 1); setStr(r, colRes, sanitizeText(h.resultado || '')); setStr(r, colDil, sanitizeText(h.diler || '')); });

      // Actualizar ‚ÄúCANTIDAD DE MANOS‚Äù si existe el encabezado
      const findQty = () => {
        for (const row of rows){
          for (const c of Array.from(row.getElementsByTagName('c'))){
            const text = (getCellText(c)||'').toUpperCase().trim();
            if (text === 'CANTIDAD DE MANOS'){
              const m = (c.getAttribute('r')||'').match(/([A-Z]+)(\d+)/); if (!m) return null;
              const col = colToNum(m[1]); const rnum = Number(m[2]);
              return { r: rnum, c: col + 1 };
            }
          }
        }
        return null;
      };
      const qty = findQty();
      if (qty){ const row = ensureRow(qty.r); removeCell(row, qty.c); setNum(row, qty.c, hands.length); }

      // --- Escribir estad√≠sticas en tablas de la plantilla ---
      const rowsAll = (snap?.pages || []).flat().filter((r:any) => (r?.resultado||'').trim()!=='' || (r?.diler||'').trim()!=='');
      const norm = (s:string) => (s||'').trim().toUpperCase();
      const total = rowsAll.length;
      const pctVal = (n:number) => total>0 ? Math.round((n*1000)/total)/10 : 0; // porcentaje 0..100 con 1 decimal
      const stats = snap?.stats ?? (()=>{
        const wonTotal = rowsAll.filter((r: { resultado: string }) => ['GANE','GANE DOBLADA','DIVIDI GANE','BJ'].includes(norm(r.resultado))).length;
        const lostTotal = rowsAll.filter((r: { resultado: string }) => ['PERDI','PERDI DOBLADA','DIVIDI PERDI'].includes(norm((r as { resultado: string }).resultado))).length;
        const tieTotal = rowsAll.filter((r: any) => norm(r.resultado) === 'EMPATE').length;
        let streakGanadas=0; for(let i=rowsAll.length-1;i>=0;i--){ const r=norm(rowsAll[i].resultado); if(r.includes('GANE')||r==='BJ') streakGanadas++; else break; }
        let streakPerdidas=0; for(let i=rowsAll.length-1;i>=0;i--){ const r=norm(rowsAll[i].resultado); if(r.includes('PERDI')) streakPerdidas++; else break; }
        const sinceLast=(fn:(r:any)=>boolean)=>{ let c=0; for(let i=rowsAll.length-1;i>=0;i--){ if(fn(rowsAll[i])) break; c++; } return c; };
        const sinBJ = sinceLast((r: any) => norm(r.resultado) === 'BJ');
        const ganeDob = sinceLast((r: any) => norm(r.resultado).includes('GANE DOBLADA'));
        const perdiDob = sinceLast((r: any) => norm(r.resultado).includes('PERDI DOBLADA'));
        const divGane = sinceLast((r: any) => norm(r.resultado).includes('DIVIDI GANE'));
        const divPerdi = sinceLast((r: any) => norm(r.resultado).includes('DIVIDI PERDI'));
        const dVoloTotal = rowsAll.filter((r: { diler: string }) => norm(r.diler) === 'VOLO').length;

        const dNoVoloTotal = rowsAll.filter((r: { diler: string }) => norm(r.diler) === 'NO VOLO').length;
        const dBjTotal = rowsAll.filter((r: { diler: string }) => norm(r.diler) === 'BJ').length;
        let dStreakVolo=0; for(let i=rowsAll.length-1;i>=0;i--){ const d=norm(rowsAll[i].diler); if(d==='VOLO') dStreakVolo++; else break; }
        let dStreakNoVolo=0; for(let i=rowsAll.length-1;i>=0;i--){ const d=norm(rowsAll[i].diler); if(d==='NO VOLO') dStreakNoVolo++; else break; }
        let dStreakBj=0; for(let i=rowsAll.length-1;i>=0;i--){ const d=norm(rowsAll[i].diler); if(d==='BJ') dStreakBj++; else break; }
        return {
          total,
          jugador: {
            rachas: { ganadas: streakGanadas, perdidas: streakPerdidas, sinBJ, ganeDob, perdiDob, divGane, divPerdi },
            porcentajes: {
              unidad: { ganadas: wonTotal, perdidas: lostTotal, empate: tieTotal },
              porcentajes: { ganadas: pctVal(wonTotal), perdidas: pctVal(lostTotal), empate: pctVal(tieTotal) }
            }
          },
          diler: {
            rachas: { volo: dStreakVolo, noVolo: dStreakNoVolo, bj: dStreakBj },
            porcentajes: {
              unidad: { volo: dVoloTotal, noVolo: dNoVoloTotal, bj: dBjTotal },
              porcentajes: { volo: pctVal(dVoloTotal), noVolo: pctVal(dNoVoloTotal), bj: pctVal(dBjTotal) }
            }
          }
        };
      })();

      // Helper: encontrar columnas de un grupo de encabezados en una misma fila
      const findHeaderGroup = (keys: string[]) => {
        for(const row of rows){
          const cells = Array.from(row.getElementsByTagName('c'));
          const texts = cells.map(c=>({ cnum: colToNum((c.getAttribute('r')||'').match(/([A-Z]+)(\d+)/)?.[1]||'A'), txt: (getCellText(c)||'').toUpperCase().trim() }));
          const map: Record<string, number> = {};
          keys.forEach(k=>{
            const hit = texts.find(t=>t.txt===k.toUpperCase()); if(hit) map[k]=hit.cnum;
          });
          if(keys.every(k=>map[k]>0)) return { row: Number(row.getAttribute('r')), cols: map };
        }
        return null;
      };

      // 1) Tabla PORCENTAJE % del jugador
      const grpJugador = findHeaderGroup(['ACCION','UNIDAD','%']);
      if (grpJugador){
        const colA = grpJugador.cols['ACCION']; const colU = grpJugador.cols['UNIDAD']; const colP = grpJugador.cols['%'];
        for(const row of rows){
          const rnum = Number(row.getAttribute('r'));
          if (rnum <= grpJugador.row) continue;
          const accionCell = Array.from(row.getElementsByTagName('c')).find(c => c.getAttribute('r') === ref(colA, rnum));
          const name = accionCell ? (getCellText(accionCell)||'').toUpperCase().trim() : '';
          if (!name) break; // fin de la tabla
          if (['GANADAS','PERDIDAS','EMPATE'].includes(name)){
            const unidad = stats.jugador.porcentajes.unidad[name.toLowerCase() as 'ganadas'|'perdidas'|'empate'];
            const por = stats.jugador.porcentajes.porcentajes[name.toLowerCase() as 'ganadas'|'perdidas'|'empate'] / 100; // decimal para formato %
            setNum(row, colU, unidad);
            setNum(row, colP, por);
          }
        }
      }

      // 2) Tabla RACHAS DILER (conteo de rachas)
      const grpRachasDiler = findHeaderGroup(['RACHAS DILER','CANTIDAD']);
      if (grpRachasDiler){
        const colR = grpRachasDiler.cols['RACHAS DILER']; const colC = grpRachasDiler.cols['CANTIDAD'];
        for(const row of rows){
          const rnum = Number(row.getAttribute('r')); if (rnum <= grpRachasDiler.row) continue;
          const labelCell = Array.from(row.getElementsByTagName('c')).find(c => c.getAttribute('r') === ref(colR, rnum));
          const name = labelCell ? (getCellText(labelCell)||'').toUpperCase().trim() : '';
          if (!name) break;
          if (['VOLO','NO VOLO','BJ'].includes(name)){
            const valMap: any = { 'VOLO': stats.diler.rachas.volo, 'NO VOLO': stats.diler.rachas.noVolo, 'BJ': stats.diler.rachas.bj };
            setNum(row, colC, valMap[name]);
          }
        }
      }

      // 3) Tabla ACCION/UNIDAD/% del DILER
      const grpDiler = findHeaderGroup(['ACCION','UNIDAD','%']);
      if (grpDiler){
        const colA = grpDiler.cols['ACCION']; const colU = grpDiler.cols['UNIDAD']; const colP = grpDiler.cols['%'];
        for(const row of rows){
          const rnum = Number(row.getAttribute('r')); if (rnum <= grpDiler.row) continue;
          const accionCell = Array.from(row.getElementsByTagName('c')).find(c => c.getAttribute('r') === ref(colA, rnum));
          const name = accionCell ? (getCellText(accionCell)||'').toUpperCase().trim() : '';
          if (!name) break;
          if (['VOLO','NO VOLO','BJ'].includes(name)){
            const unidadMap: any = { 'VOLO': stats.diler.porcentajes.unidad.volo, 'NO VOLO': stats.diler.porcentajes.unidad.noVolo, 'BJ': stats.diler.porcentajes.unidad.bj };
            const pctMap: any = { 'VOLO': stats.diler.porcentajes.porcentajes.volo, 'NO VOLO': stats.diler.porcentajes.porcentajes.noVolo, 'BJ': stats.diler.porcentajes.porcentajes.bj };
            setNum(row, colU, unidadMap[name]);
            setNum(row, colP, pctMap[name] / 100);
          }
        }
      }

      // 4) Tabla ULTIMAS RACHAS (conteos espec√≠ficos)
      const grpUltR = findHeaderGroup(['ULTIMAS RACHAS','CANTIDAD']);
      if (grpUltR){
        const colL = grpUltR.cols['ULTIMAS RACHAS']; const colC = grpUltR.cols['CANTIDAD'];
        const map: Record<string, number> = {
          'GANADAS': stats.jugador.rachas.ganadas,
          'PERDIDAS': stats.jugador.rachas.perdidas,
          'MANOS SIN BJ': stats.jugador.rachas.sinBJ,
          'GANE DOBLADA': stats.jugador.rachas.ganeDob,
          'PERDI DOBLADA': stats.jugador.rachas.perdiDob,
          'DIVIDI GANE': stats.jugador.rachas.divGane,
          'DIVIDI PERDI': stats.jugador.rachas.divPerdi
        };
        for(const row of rows){
          const rnum = Number(row.getAttribute('r')); if (rnum <= grpUltR.row) continue;
          const labelCell = Array.from(row.getElementsByTagName('c')).find(c => c.getAttribute('r') === ref(colL, rnum));
          const name = labelCell ? (getCellText(labelCell)||'').toUpperCase().trim() : '';
          if (!name) break;
          if (map[name] !== undefined){ setNum(row, colC, map[name]); }
        }
      }

      // Actualizar dimensi√≥n del worksheet para evitar reparaciones de Excel
      const dimEl = sheetDoc.getElementsByTagName('dimension')[0];
      const endCol = Math.max(colManos, colRes, colDil);
      const endRow = startRow + Math.max(hands.length, 1);
      if (dimEl) dimEl.setAttribute('ref', `A1:${numToCol(endCol)}${endRow}`);

      // Sustituir hoja y generar blob
      zip.file(sheetPath, serializeXML(sheetDoc));
      const outBlob = await zip.generateAsync({ type: 'blob' });
      const fname = `${(snap?.snapshot_name || 'snapshot')}.xlsm`;
      const a = document.createElement('a');
      a.href = URL.createObjectURL(outBlob);
      a.download = fname;
      document.body.appendChild(a);
      a.click();
      URL.revokeObjectURL(a.href);
      a.remove();
    } catch (e: any) {
      console.error(e);
      alert('Error generando Excel: ' + (e?.message ?? e));
    }
  }
