<script>
  // @ts-nocheck
  import { getSupabase } from "../lib/supabaseClient";
  const supabase = getSupabase(true);
  // VoiceCommands Class Integration
  class VoiceCommands {
    constructor() {
      (this as any).isListening = false;
      (this as any).isStarting = false;
      (this as any).shouldReconnect = false;
      (this as any).recognition = null;
      (this as any).actionCooldownMs = 100;
      (this as any).lastActionTime = 0;
      (this as any).lastError = null;
      (this as any).retryCount = 0;
      (this as any).maxRetries = 1;
      (this as any).fastMode = true;
      (this as any).interimThresholds = { number: 0.6, letter: 0.6 };
      (this as any).lastProcessedToken = null;
      (this as any).lastProcessedTime = 0;
      (this as any).domElements = this.cacheDOMElements();

      // Initialize voice recognition
      (this as any).initializeRecognition();
      
      // Read configuration from DOM
      (this as any).readConfigFromDom();
    }

    cacheDOMElements() {
      return {
        lowCardBtn: document.getElementById('card-low'),
        neutralCardBtn: document.getElementById('card-neutral'),
        highCardBtn: document.getElementById('card-high'),
        resetBtn: document.getElementById('resetCount'),
        voiceBtn: document.getElementById('voiceControlBtn'),
        voiceIcon: document.getElementById('voiceIcon')
      };
    }

    readConfigFromDom() {
      try {
        const configElement = document.getElementById('voice-config');
        if (!configElement) {
          console.warn('No se encontr√≥ el elemento de configuraci√≥n de voz');
          return;
        }

        const config = JSON.parse(configElement.textContent);
        
        (this as any).fastMode = config.fastMode !== undefined ? !!config.fastMode : true;
        (this as any).interimThresholds = config.interimThresholds || { number: 0.6, letter: 0.6 };
        (this as any).actionCooldownMs = config.cooldownMs !== undefined ? config.cooldownMs : ((this as any).fastMode ? 20 : 100);
        (this as any).allowedSinglesNumbers = new Set(config.shortTokens?.numbers || []);
        (this as any).allowedSinglesLetters = new Set(config.shortTokens?.letters || []);
        (this as any).thresholds = {
          number: 0.2,
          letter: 0.2
        };

        console.log('Configuraci√≥n de voz cargada:', {
          cooldownMs: (this as any).actionCooldownMs,
          allowedNumbers: [...this.allowedSinglesNumbers],
          allowedLetters: [...this.allowedSinglesLetters],
          thresholds: this.thresholds,
          fastMode: (this as any).fastMode,
          interimThresholds: (this as any).interimThresholds
        });
      } catch (error) {
        console.error('Error al leer la configuraci√≥n de voz:', error);
      }
    }

    initializeRecognition() {
      const SR = window.SpeechRecognition || window.webkitSpeechRecognition;
      if (!SR) {
        console.error('El reconocimiento de voz no est√° soportado en este navegador');
        return;
      }

      this.recognition = new SR();
      this.recognition.continuous = true;
      this.recognition.interimResults = true;
      this.recognition.maxAlternatives = 3;
      this.recognition.lang = 'es-ES';

      this.recognition.onstart = () => {
        console.log('Reconocimiento de voz iniciado');
        this.isStarting = false;
        this.isListening = true;
        this.updateVoiceButton();
      };

      this.recognition.onend = () => {
        console.log('Reconocimiento de voz finalizado');
        this.isStarting = false;
        this.isListening = false;
        this.updateVoiceButton();

        // Evitar bucle de reconexi√≥n si hubo error de red o permisos
        const blockReconnectErrors = new Set(['not-allowed','network','audio-capture']);
        if ((this as any).lastError && blockReconnectErrors.has((this as any).lastError)) {
          this.shouldReconnect = false;
          return;
        }

        if (this.shouldReconnect) {
          console.log('Reconectando...');
          setTimeout(() => {
            if (this.shouldReconnect && !this.isListening && !this.isStarting) {
              this.startListening();
            }
          }, 1000);
        }
      };

      this.recognition.onerror = (event) => {
        console.error('Error en el reconocimiento de voz:', event.error);
        (this as any).lastError = event.error;
        if (event.error === 'not-allowed') {
          console.log('Permiso de micr√≥fono denegado');
          this.shouldReconnect = false;
          this.isListening = false;
          this.updateVoiceButton();
        } else if (event.error === 'network' || event.error === 'audio-capture') {
          console.log('Problema de red o micr√≥fono, deteniendo reconexi√≥n autom√°tica');
          this.shouldReconnect = false;
          this.isListening = false;
          this.updateVoiceButton();
        }
      };

      this.recognition.onresult = (event) => {
        for (let i = event.resultIndex; i < event.results.length; i++) {
          const result = event.results[i];
          const isFinal = !!result.isFinal;

          for (let j = 0; j < result.length; j++) {
            const raw = result[j].transcript;
            const transcript = raw.toLowerCase().trim();
            const confidence = result[j].confidence;

            console.log(`Alternativa ${j + 1}: "${transcript}" (Confianza: ${confidence}, Final: ${isFinal})`);

            const normalized = this.normalizeTranscript(transcript);
            const tokenType = this.getTokenType(normalized);

            if (!tokenType) continue; // sin token reconocido

            // Dedupe por token reciente para evitar repetici√≥n mientras hablas
            if (this.lastProcessedToken === normalized && (Date.now() - this.lastProcessedTime) < 350) {
              continue;
            }

            // Cooldown m√≠nimo, pero activo para evitar doble click
            if (this.isOnCooldown()) {
              continue;
            }

            const accept = this.shouldAcceptToken(tokenType, confidence, isFinal);
            if (!accept) continue;

            if (normalized === 'reset') {
              this.processCommand('reset');
            } else {
              const wasProcessed = this.processQuickCommand(normalized, confidence);
              if (!wasProcessed) continue;
            }

            this.lastProcessedToken = normalized;
            this.lastProcessedTime = Date.now();
          }
        }
      };
    }

    processQuickCommand(token, confidence) {
      const t = token.trim().toLowerCase();

      // N√∫meros
      if (/^\d+$/.test(t)) {
        const num = parseInt(t);
        if (num >= 2 && num <= 6) {
          this.domElements.lowCardBtn?.click();
          this.updateLastActionTime();
          return true;
        } else if (num >= 7 && num <= 9) {
          this.domElements.neutralCardBtn?.click();
          this.updateLastActionTime();
          return true;
        } else if (num === 10 || num === 1) { // 10 y AS
          this.domElements.highCardBtn?.click();
          this.updateLastActionTime();
          return true;
        }
      }

      // Figuras y AS
      if (['j','q','k','a'].includes(t)) {
        this.domElements.highCardBtn?.click();
        this.updateLastActionTime();
        return true;
      }

      return false;
    }

    normalizeTranscript(transcript) {
      const t = transcript.toLowerCase().trim();

      // Palabras comunes espa√±olas
      const numMap = {
        'dos':'2','tres':'3','cuatro':'4','cinco':'5','seis':'6','siete':'7','ocho':'8','nueve':'9','diez':'10'
      } as any;
      const faceMap = {
        'j':'j','jota':'j','jack':'j',
        'q':'q','reina':'q','queen':'q',
        'k':'k','rey':'k','king':'k',
        'a':'a','as':'a','ace':'a','haz':'a','has':'a'
      } as any;

      // Ingl√©s por si el motor devuelve en ingl√©s
      const numMapEn = {
        'two':'2','three':'3','four':'4','five':'5','six':'6','seven':'7','eight':'8','nine':'9','ten':'10'
      } as any;

      if (t in numMap) return numMap[t];
      if (t in numMapEn) return numMapEn[t];
      if (t in faceMap) return faceMap[t];

      // Buscar n√∫meros dentro de la frase (ej. "sali√≥ dos" / "dos cartas")
      const words = t.split(/\s+/);
      for (const w of words) {
        if (w in numMap) return numMap[w];
        if (w in numMapEn) return numMapEn[w];
        if (w in faceMap) return faceMap[w];
        if (/^\d+$/.test(w)) return w;
      }

      // Comandos de control
      if (['reset','restart','reiniciar','resetear','restablecer'].includes(t)) {
        return 'reset';
      }

      // Ignorar cualquier otra cosa
      return null;
    }

    getTokenType(token) {
      if (token === 'reset') return 'control';
      if (/^\d+$/.test(token)) return 'number';
      if (['j','q','k','a'].includes(token)) return 'letter';
      return null;
    }

    shouldAcceptToken(type, confidence, isFinal) {
      if (isFinal) return true;
      const thresholds = (this as any).interimThresholds || { number: 0.6, letter: 0.6 };
      if (type === 'control') return confidence >= 0.5; // reset en interino
      if (type === 'number') return confidence >= thresholds.number;
      if (type === 'letter') return confidence >= thresholds.letter;
      return false;
    }

    processCommand(command) {
      command = command.toLowerCase().trim();
      
      if (command === 'reset' || command === 'reiniciar') {
        this.domElements.resetBtn?.click();
        this.updateLastActionTime();
      }
    }

    isOnCooldown() {
      return (Date.now() - this.lastActionTime) < this.actionCooldownMs;
    }

    updateLastActionTime() {
      this.lastActionTime = Date.now();
    }

    startListening() {
      if (!this.recognition) {
        console.error('El reconocimiento de voz no est√° inicializado');
        return;
      }

      if (this.isStarting || this.isListening) {
        console.log('Reconocimiento ya en proceso');
        return;
      }

      try {
        this.shouldReconnect = true;
        (this as any).isStarting = true;
        (this as any).lastError = null;
        this.recognition.start();
        console.log('Iniciando reconocimiento de voz...');
      } catch (error) {
        console.error('Error al iniciar el reconocimiento de voz:', error);
        this.shouldReconnect = false;
        this.isListening = false;
        this.isStarting = false;
        this.updateVoiceButton();
      }
    }

    stopListening() {
      if (!this.recognition) return;
      
      this.shouldReconnect = false;
      try {
        this.recognition.stop();
        console.log('Deteniendo reconocimiento de voz...');
      } catch (error) {
        console.error('Error al detener el reconocimiento de voz:', error);
      }
    }

    toggleListening() {
      if (this.isListening) {
        this.stopListening();
      } else {
        this.startListening();
      }
    }

    updateVoiceButton() {
      if (!this.domElements.voiceBtn || !this.domElements.voiceIcon) return;

      if (this.isListening) {
        this.domElements.voiceBtn.style.backgroundColor = '#059669';
        this.domElements.voiceBtn.innerHTML = '<span id="voiceIcon">üé§</span> Desactivar Control por Voz';
      } else {
        this.domElements.voiceBtn.style.backgroundColor = '#4CAF50';
        this.domElements.voiceBtn.innerHTML = '<span id="voiceIcon">üé§</span> Activar Control por Voz';
      }
    }
  }

  // Blackjack Game Logic
  let deckCount = 6;
  let runningCount = 0;
  let cardsPlayed = 0;
  const CARDS_PER_DECK = 52;
  let totalCards = deckCount * CARDS_PER_DECK;
  let voiceCommands;

  // Make functions global so they're accessible from onclick handlers
  (window as any).updateCount = function updateCount(value) {
    runningCount += value;
    cardsPlayed++;
    
    const remainingDecks = (totalCards - cardsPlayed) / CARDS_PER_DECK;
    const trueCount = (remainingDecks > 0) ? (runningCount / remainingDecks).toFixed(2) : "0.00";
    
    // Actualizar conteos
    const runningCountEl = document.getElementById('runningCount');
    const trueCountEl = document.getElementById('trueCount');
    const cardsPlayedEl = document.getElementById('cardsPlayed');
    const cardsRemainingEl = document.getElementById('cardsRemaining');
    const progressBarEl = document.getElementById('progressBar');
    
    if (runningCountEl) runningCountEl.textContent = runningCount.toString();
    if (trueCountEl) trueCountEl.textContent = trueCount;
    if (cardsPlayedEl) cardsPlayedEl.textContent = cardsPlayed.toString();
    if (cardsRemainingEl) cardsRemainingEl.textContent = (totalCards - cardsPlayed).toString();
    
    // Actualizar barra de progreso
    const progress = (cardsPlayed / totalCards) * 100;
    if (progressBarEl) progressBarEl.style.width = `${progress}%`;
    
    // Actualizar color del conteo actual
    if (runningCountEl) {
      if (runningCount > 0) {
        runningCountEl.className = 'text-6xl font-bold text-green-400';
      } else if (runningCount < 0) {
        runningCountEl.className = 'text-6xl font-bold text-red-400';
      } else {
        runningCountEl.className = 'text-6xl font-bold text-white';
      }
    }
    
    // Actualizar cartas restantes por grupo
    updateRemainingCards();
  };

  function updateRemainingCards() {
    const lowCardsPerDeck = 20; // 2,3,4,5,6
    const neutralCardsPerDeck = 12; // 7,8,9
    const highCardsPerDeck = 20; // 10,J,Q,K,A
    
    const totalLowCards = lowCardsPerDeck * deckCount;
    const totalNeutralCards = neutralCardsPerDeck * deckCount;
    const totalHighCards = highCardsPerDeck * deckCount;
    
    const lowCardsRemainingEl = document.getElementById('lowCardsRemaining');
    const neutralCardsRemainingEl = document.getElementById('neutralCardsRemaining');
    const highCardsRemainingEl = document.getElementById('highCardsRemaining');
    
    if (lowCardsRemainingEl) lowCardsRemainingEl.textContent = `${totalLowCards} restantes`;
    if (neutralCardsRemainingEl) neutralCardsRemainingEl.textContent = `${totalNeutralCards} restantes`;
    if (highCardsRemainingEl) highCardsRemainingEl.textContent = `${totalHighCards} restantes`;
  }

  (window as any).setDeckCount = function setDeckCount(count, buttonEl) {
    // Remover clase active de todos los botones
    document.querySelectorAll('.deck-btn').forEach((btn) => {
      btn.classList.remove('active');
      if (btn instanceof HTMLElement) {
        btn.style.background = 'rgba(255, 255, 255, 0.1)';
        btn.style.color = 'white';
        btn.style.transform = 'scale(1)';
      }
    });
    
    // Agregar clase active al bot√≥n seleccionado
    if (buttonEl && buttonEl instanceof HTMLElement) {
      buttonEl.classList.add('active');
      buttonEl.style.background = '#059669';
      buttonEl.style.color = 'white';
      buttonEl.style.transform = 'scale(1.05)';
    }
    
    deckCount = count;
    totalCards = deckCount * CARDS_PER_DECK;
    
    // Actualizar estad√≠sticas
    const totalCardsEl = document.getElementById('totalCards');
    const cardsRemainingEl = document.getElementById('cardsRemaining');
    
    if (totalCardsEl) totalCardsEl.textContent = totalCards.toString();
    if (cardsRemainingEl) cardsRemainingEl.textContent = totalCards.toString();
    
    // Reiniciar conteo
    resetCount();
  };

  (window as any).resetCount = function resetCount() {
    runningCount = 0;
    cardsPlayed = 0;
    
    // Reiniciar displays
    const runningCountEl = document.getElementById('runningCount');
    const trueCountEl = document.getElementById('trueCount');
    const cardsPlayedEl = document.getElementById('cardsPlayed');
    const cardsRemainingEl = document.getElementById('cardsRemaining');
    const progressBarEl = document.getElementById('progressBar');
    
    if (runningCountEl) {
      runningCountEl.textContent = '0';
      runningCountEl.className = 'text-6xl font-bold text-white';
    }
    if (trueCountEl) trueCountEl.textContent = '0.00';
    if (cardsPlayedEl) cardsPlayedEl.textContent = '0';
    if (cardsRemainingEl) cardsRemainingEl.textContent = totalCards.toString();
    if (progressBarEl) progressBarEl.style.width = '0%';
    
    // Actualizar cartas restantes
    updateRemainingCards();
  };

  // Serializar estado actual del contador
  function serializeCounter(){
    const trueCountEl = document.getElementById('trueCount');
    return {
      deck_count: deckCount,
      running_count: runningCount,
      true_count: Number((trueCountEl?.textContent || '0').toString().replace(',', '.')) || 0,
      cards_played: cardsPlayed,
      cards_remaining: totalCards - cardsPlayed,
      total_cards: totalCards,
      timestamp: new Date().toISOString()
    } as any;
  }

  // Guardar snapshot en Supabase
  async function saveCounterSnapshot(){
    try{
      const { data: sessionRes } = await supabase.auth.getSession();
      const userId = sessionRes?.session?.user?.id ?? null;
      if (!userId){
        alert('Debes iniciar sesi√≥n para guardar.');
        window.location.href = '/login';
        return;
      }

      const payload = serializeCounter();
      const now = new Date();
      const dateStr = now.toLocaleDateString('es-ES');
      const timeStr = now.toLocaleTimeString('es-ES', {hour: '2-digit', minute: '2-digit'});
      (payload as any).snapshot_name = `Contador Blackjack - ${dateStr} ${timeStr}`;

      const insertData: any = { data: payload, created_at: now.toISOString(), workspace_id: null, project_id: null };
      insertData.user_id = userId;
      const { error } = await supabase.from('bj_snapshots').insert(insertData);
      if (error) throw error;
      alert('Registro guardado correctamente.');
    }catch(e:any){
      console.error('Error al guardar registro:', e);
      alert('Error al guardar: ' + (e?.message ?? e));
    }
  }

  // Initialize everything when DOM is loaded
  document.addEventListener('DOMContentLoaded', function() {
    // Initialize voice commands
    try {
      voiceCommands = new VoiceCommands();
      (window as any).voiceCommands = voiceCommands;
      console.log('Reconocimiento de voz inicializado correctamente');
    } catch (error) {
      console.error('Error al inicializar el reconocimiento de voz:', error);
      const voiceControlBtn = document.getElementById('voiceControlBtn');
      if (voiceControlBtn) {
        voiceControlBtn.style.display = 'none';
      }
    }
    
    // Initialize card counts
    updateRemainingCards();
    
    // Set 6 decks as active initially
    const sixDeckBtn = document.querySelector('.deck-btn[onclick="setDeckCount(6, this)"]');
    if (sixDeckBtn && sixDeckBtn instanceof HTMLElement) {
      sixDeckBtn.classList.add('active');
      sixDeckBtn.style.background = '#059669';
      sixDeckBtn.style.color = 'white';
      sixDeckBtn.style.transform = 'scale(1.05)';
    }

    // Conectar bot√≥n Guardar
    document.getElementById('btn-save-counter')?.addEventListener('click', saveCounterSnapshot);
  });
</script>